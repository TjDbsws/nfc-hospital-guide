# backend/.env.example
# 팀원들이 복사해서 사용할 환경변수 템플릿

# Django 환경 설정
DJANGO_ENVIRONMENT=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# JWT 보안 키
JWT_SECRET_KEY=your-jwt-secret-key-here

# 데이터베이스 설정
DB_NAME=nfc_hospital
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_HOST=localhost
DB_PORT=3306

# Redis 설정 
REDIS_HOST=127.0.0.1
REDIS_URL=redis://127.0.0.1:6379/0

# CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# 허용 호스트
ALLOWED_HOSTS=localhost,127.0.0.1

# 이메일 설정 (선택사항)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=

# AWS S3 설정 (선택사항)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=

# 외부 API 키 (선택사항)
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
PASS_API_KEY=
FCM_SERVER_KEY=

# AWS RDS MySQL 설정
AWS_DB_NAME=nfc_hospital_prod
AWS_DB_USER=admin
AWS_DB_PASSWORD=your-rds-password
AWS_DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
AWS_DB_PORT=3306

# AWS Redis (선택사항)
AWS_REDIS_URL=redis://your-elasticache-endpoint:6379/0

# CORS 설정 (실제 프론트엔드 도메인)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000,http://localhost:5173